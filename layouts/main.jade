doctype 5
html(lang="en-US")
    head
        meta(charset="UTF-8")
        title Title

        - if (environment === 'development')
            link(href="/css/dev/style.css", rel="stylesheet")
        - else
            link(href="/css/build/style.css", rel="stylesheet")

        block head

        - if (environment === 'development')
            script(src="/js/dev/libraries/require/require.js")
            script(src="/js/dev/libraries/require/config.js")
            script(src="/js/dev/libraries/appular/appular.js")
        - else
            script(src="/js/build/appular.js")

    body
        header
            h1
                a(href="/") Title
                .user-bar(data-appular-module="user-bar", data-links="link")

        block content

        footer
